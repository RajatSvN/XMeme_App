<!-- Add Meme Form -->

    <div class="container">
        <form action="#" method="POST" class="my-12" >

              <div class="px-4 py-5 bg-white space-y-6 grid justify-items-center">

            <!-- Meme Owner Name Input Field-->
                <div class="sm:w-3/6 w-5/6">
                    <label for="name" class="block text-sm font-medium text-gray-700">Meme Owner</label>
                    <input type="text" name="name" id="name" placeholder="Enter your full name" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
                    <span class="error" id="ownerErrorMsg"></span>
                  </div>

            <!-- Meme Caption Input Field-->
                  <div class="sm:w-3/6 w-5/6">
                    <label for="caption" class="block text-sm font-medium text-gray-700">Caption</label>
                    <input type="text" name="caption" id="caption" placeholder="Time to be a Picasso with your caption" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
                    <span class="error" id="captionErrorMsg"></span>
                </div>

            <!-- Meme URL Input Field-->
                  <div class="sm:w-3/6 w-5/6">
                    <label for="url" class="block text-sm font-medium text-gray-700">
                        Meme URL
                    </label>
                    <div class="mt-1 flex rounded-md shadow-sm">
                      <span class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 text-sm">
                        http://
                      </span>
                      <input type="text" name="url" id="url" class="focus:ring-indigo-500 focus:border-indigo-500 flex-1 block w-full rounded-none rounded-r-md sm:text-sm border-gray-300" placeholder="www.example.com">
                    </div>
                    <span class="error" id="urlErrorMsg"></span>
                  </div>
                
        <!-- Add Meme Button -->
              <div class="px-4 py-3 text-right sm:px-6">
                <button type="submit" id="add_meme" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                  Add Meme
                </button>
              </div>
              <span class="success" id="successMessage"></span>
            </div>
          </form>

    </div>
